<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', class: "img-circle pull-let profile-img", fallback: "no_image.jpeg" %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフ編集", edit_user_path(@user), class: "pull-right" %></p>
  <% end %>
</div>

<%= render 'post_images/list', post_images: @post_images %>